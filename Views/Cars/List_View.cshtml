<h3></h3>
<h3>@Model._currCategory</h3>
<h3>@ViewBag.Title</h3>
<div class="row mt-5 mb-2">

    @{
        foreach (var item in Model.AllCars)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src= @item.img alt="@item.name"/>
                <h2>Model: @item.name</h2>
                <p>@item.shortDesc</p>
                <p>Price: @item.price.ToString("c")</p>
                <p><a class="btn btn-warning" href="#">More detailed</a></p>
                
            </div>

        }
    }
</div>
